<!-- ******PROMO****** --> 
<section id="promo" class="promo section offset-header has-pattern">
  <div class="container">
    <div class="row">
      <div class="overview col-md-12 col-sm-12 col-xs-12">
        <%= image_tag "blogfeature2clear.png", :width => 1080, :height => 280, :class => "img-responsive center-block" %>        
      </div><!--//overview-->                                           
    </div><!--//row-->
  </div><!--//container-->
</section><!--//promo-->


<!-- ******FEATURES****** --> 
<section id="features" class="features section">
  <div class="container">
    <div class="row">
      <% @posts.each do |p| %>
        <h2 class="title text-center sr-only">Features</h2>
        <div class="item col-md-3 col-sm-6 col-xs-12 text-center">

          <div class="icon">
            <i class="fa fa-<%= p.category.fonticon %>"></i>                
          </div><!--//icon-->

          <div class="content">
            <h3 class="title"><%= link_to p.title, post_path(p) %></h3>
            <%= simple_format p.featuretext %>  
            <button class="modal-trigger btn btn-link" data-toggle="modal" data-target="#feature-modal-1"><%= link_to "Read more", post_path(p) %></button>
          </div><!--//content-->               
        </div><!--//item-->

      <% end -%>
    </div><!--//row-->
  </div><!--//container-->
</section><!--//features-->


<!-- ******Recent Posts****** --> 
    <section id="recent" class="recent section">
        <div class="container">
            <div class="row">
                <h2 class="title text-center has-pattern">Recent Posts</h2>

                <div class="faq-col col-md-6 col-sm-6 col-xs-12">
                  <% @oddPosts.each do |op| %>
                    <div class="item card_body">
                        <h3 class="question card_title">

                          <span class="fa-stack fa">
                            <i class="fa fa-circle fa-stack-2x"></i>
                            <i class="fa fa-<%= op.category.fonticon %> fa-stack-1x fa-inverse"></i>
                          </span>

                          <%= link_to op.title, post_path(op) %>
                          <span class="small pull-right"><%= op.updated_at.strftime("%B %d, %Y") %></span>
                        </h3>

                        <% if op.body.length <= 1000 %>
                          <span class="answer"><%= markdown(op.body) %></span>
                        <% else %>
                          <span class="answer"><%= op.featuretext.html_safe %></span>
                        <% end %>
                        
                    </div><!--//item-->
                  <% end -%>
                </div><!--//faq-col-->

                <div class="faq-col col-md-6 col-sm-6 col-xs-12">
                  <% @evenPosts.each do |ep| %>
                    
                    <div class="item">
                      <h3 class="question">
                        <span class="fa-stack fa">
                          <i class="fa fa-circle fa-stack-2x"></i>
                          <i class="fa fa-<%= ep.category.fonticon %> fa-stack-1x fa-inverse"></i>
                        </span>
                        
                        <%= link_to ep.title, post_path(ep) %>
                        <span class="small pull-right">
                          <%= ep.updated_at.strftime("%B %d, %Y") %>
                        </span>
                      </h3>

                      <% if ep.body.length <= 1000 %>
                        <span class="answer"><%= markdown(ep.body) %></span>
                      <% else %>
                        <span class="answer"><%= ep.featuretext.html_safe %></span>
                        <% end %>
                    </div><!--//item-->
                  <% end -%>
                </div><!--//recent-col-->


            </div><!--//row-->
            <div class="more text-center">
                <h4 class="title"><%= link_to "All Posts", posts_path %></h4>
                <a class="btn btn-lg btn-theme scrollto" href="#contact">Get in touch<i class="fa fa-arrow-circle-o-down"></i></a>
            </div>
        </div><!--//container-->
    </section><!--//faq-->