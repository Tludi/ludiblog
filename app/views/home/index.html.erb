<div class="container">
      <!-- Column for each category -->
      <div class="row">
        <% @categories.each do |c| %>
          <div class="col-md-3 card_post">
            <h2><%= c.name%></h2>
            <ul>
            <% @posts.each do |p| %>
              <% if p.category == c %>
                <li><%= link_to p.title, post_path(p) %></li>
              <% end -%>
            <% end -%>
            </ul>
            <p><a class="btn btn-default" href="#" role="button">View details &raquo;</a></p>
          </div>
        <% end -%>
        <div class="col-md-3">
          <h2>Archives</h2>
          <ul>
            <% @posts.each do |p| %>
              <li><%= link_to p.title, post_path(p) %></li>
            <% end -%>
          </ul>
        </div>
      </div>

      <hr>

      <footer>
        <p>&copy; Company 2015</p>
      </footer>
    </div> <!-- /container -->