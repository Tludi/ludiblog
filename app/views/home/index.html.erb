            <i class="fa fa-<%= p.fonticon %>"></i>                
          </div><!--//icon-->

          <div class="content">
            <h3 class="title"><%= p.title %></h3>
            <%= simple_format p.featuretext %>  
            <button class="modal-trigger btn btn-link" data-toggle="modal" data-target="#feature-modal-1">Read more</button>
          </div><!--//content-->               
        </div><!--//item-->

      <% end -%>
    </div><!--//row-->
  </div><!--//container-->
</section><!--//features-->


