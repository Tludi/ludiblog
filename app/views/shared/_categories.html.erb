<div class="side_links">
  <%= link_to "Latest_post", post_path(@current_public_post) %></br>
  
  

   <% if session[:user_id] %>
      <p class="user_name">Logged in | 
      <%= link_to 'Log Out', logout_path %>
      <br>
      <%= link_to 'New Post', new_post_path %></p>
      <%= link_to 'Private Posts', "#" %>
    <% end -%>
</div>

<h2>Categories</h2>
<% if logged_in? %>
  <%= link_to "Add New Category", new_category_path, :class => "small" %>
<% end -%>
<hr>
<% @categories.each do |c| %>
  <div class="category">
    <h3>
      <span class="icon_small center">
        <i class="fa fa-<%= c.fonticon %>"></i>
      </span>
        <%= c.name %> 
        <span class="badge">
          <%= c.posts.count %>
        </span>
    </h3>
    <% c.posts.each do |category_post| %>
      <p><%= link_to category_post.title, post_path(category_post) %></p>
    <% end -%>
  </div>
<% end -%>